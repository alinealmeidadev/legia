# ==============================================
# LEGIA PLATFORM - Environment Variables Template
# ==============================================
# Copy this file to .env and fill with your actual values
# NEVER commit .env to git!

# ==============================================
# APPLICATION SETTINGS
# ==============================================
SECRET_KEY=your_secret_key_here_minimum_32_characters_required
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters_required
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================
# DATABASE
# ==============================================
DATABASE_URL=postgresql://user:password@localhost:5432/legia_db
# Production example: postgresql://user:password@host:5432/legia_production

# ==============================================
# REDIS CACHE
# ==============================================
REDIS_URL=redis://localhost:6379/0
# Production example: redis://:password@host:6379/0

# ==============================================
# API KEYS
# ==============================================

# Google Gemini (AI Agents)
GEMINI_API_KEY=your_gemini_api_key_here
# Get yours at: https://ai.google.dev/

# Asaas (Payment Gateway)
ASAAS_API_KEY=your_asaas_api_key_here
# Sandbox: $aact_hmlg_...
# Production: $aact_prod_...
# Get yours at: https://www.asaas.com/

# ==============================================
# ENVIRONMENT
# ==============================================
ENVIRONMENT=development
# Options: development, staging, production
DEBUG=True
# Set to False in production!

# ==============================================
# CORS ORIGINS
# ==============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# Production example:
# CORS_ORIGINS=https://legia.vercel.app,https://app.legia.com.br

# ==============================================
# FIRST SUPERUSER (Initial Setup)
# ==============================================
# ⚠️  CHANGE THESE IN PRODUCTION!
FIRST_SUPERUSER_EMAIL=admin@yourdomain.com
FIRST_SUPERUSER_PASSWORD=change_this_password_immediately
FIRST_SUPERUSER_NAME=Admin User

# ==============================================
# OPTIONAL: EMAIL SETTINGS (Future)
# ==============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@yourdomain.com

# ==============================================
# OPTIONAL: AWS S3 (Document Storage - Future)
# ==============================================
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=legia-documents

# ==============================================
# OPTIONAL: WhatsApp API (Future)
# ==============================================
# WHATSAPP_API_KEY=your_whatsapp_api_key
# WHATSAPP_PHONE_NUMBER=+5511999999999
